<div class="container posts">
  <%= form_for(@post, url: topic_post_path(@topic, @post), html: { id: "post-create-form" }) do |f| %>
    <h1 class="text-center">
      Edit "<%= @post.title %>"
    </h1>

    <div class="form-group">
      <h4> <%= f.label :title_field, "Title" %> </h4>
      <%= f.text_field :title, required: true, id: "post_title_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4> <%= f.label :text_field, "Body" %> </h4>
      <%= f.text_field :body, id: "post_post_field", class: 'form-control' %>
    </div>

    <div class="form-group">
      <h4 class="text-center"> Post Image </h4>
      <div id="preview-image">
        <% if @post.image? %>
          <%= image_tag @post.image, class: "img-responsive center-block" %>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.file_field :image, id: "post-image-field", class: 'form-control image-uploader' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Update post", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
