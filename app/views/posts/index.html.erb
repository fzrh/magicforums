<div class="container posts">
  <h1><%= @topic.title %>'s Posts</h1>

  <% @posts.each do |post| %>
    <div class="post text-center">
      <h3><%= post.title %></h3>
      <h5><%= post.body %></h5>
      <div class="btn btn-group">
        <%= link_to "Edit", edit_topic_post_path(@topic, post), class: "btn btn-warning btn-sm" %>
        <%= link_to "Delete", topic_post_path(@topic, post), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
      </div>
      <%= link_to "See Comments", topic_post_comments_path(@topic, post), class: "btn btn-primary btn-sm" %>
    </div>
  <% end %>

  <%= link_to "New Post", new_topic_post_path, class: "btn btn-primary" %>
</div>
