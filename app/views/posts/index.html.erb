<div class="container posts">
  <h1>Posts</h1>

  <% @posts.each do |post| %>
    <div class="post">
      <h3><%= post.title %></h3>
      <h5><%= post.body %></h5>
      <%= link_to post.title, post_path(post) %>
    </div>
  <% end %>
  <%= link_to 'Create New Post', new_post_path, class: 'btn btn-primary' %>
</div>
