<div class="container posts">
  <h1>Posts</h1>

  <% @posts.each do |post| %>
    <div class="post text-center">
      <h3><%= post.title %></h3>
      <h5><%= post.body %></h5>
      <%= link_to post.title, topic_post_path(@topic, post) %>
    </div>
  <% end %>

  <%= link_to "New Post", new_topic_post_path, class: "btn btn-primary" %>
</div>
