<div class="container posts">
  <h1><%= @post.title %></h1>
  <p><%= @post.body %></p>
  <div class="btn-group">
    <%= link_to "Edit", edit_post_path(@post), class: "btn btn-warning btn-sm" %>
    <%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Delete?" }, class: "btn btn-danger btn-sm" %>
  </div>
</div>
