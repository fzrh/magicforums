<div class="container comments">
  <h1 class="text-center"> Create Comment</h1>
  <%= form_for(comment, url: topic_post_comments_path(post.topic, post), method: :post, remote: true, html: { id: "comment-new-form" }) do |f| %>
    <div class="form-group">
      <h4> <%= f.label :body %> </h4>
      <%= f.text_field :body, id: "comment-body-field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Create post", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
