<div class="container comments">
  <%= form_for(@comment, url: topic_post_comment_path(@topic, @post, @comment), html: { id: "comment-edit-form" }) do |f| %>
    <h1 class="text-center"> Edit Comment ID: <%= @comment.id %></h1>

    <div class="form-group">
      <h4> <%= f.label :body %> </h4>
      <%= f.text_field :body, id: "comment-body-field", class: 'form-control' %>
    </div>

    <div class="form-group text-center">
      <%= f.submit "Update comment", class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>
